/*Write a JavaScript program that checks if a number is greater than 10. If it is, print "Number is greater than 10."
Modify the above program to print a different message if the number is less than or equal to 10.*/

var number = parseInt(prompt('enter number:')); 

if (number > 10){
    console.log('number is greater than 10')
}
else if (number == 10){
    console.log('that\'s 10')
}
else {
    console.log('number is less than 10')
}


/*Create a program that checks if a number is positive, negative, or zero, and prints the appropriate message.*/
var number = parseInt(prompt('enter number:')); 

if (number > 0){
    console.log('number is positive')
}
else if (number == 0){
    console.log('that\'s 0')
}
else {
    console.log('number is negative')
}


/*Write a JavaScript program that checks a person's age. If the person is over 18, check if they are eligible to vote (over 18), and if they are also a citizen.*/
var age = parseInt(prompt('enter age:')); 
var citizenship = prompt('are you a citizen? - yes/no:').toLowerCase()

if (age > 18 && citizenship == 'yes'){
    console.log('You are allowed to vote!')
}

else {
    console.log('You have to be an over 18 citizen to vote!')
}



/*Create a program that checks if a number is even or odd. If the number is even, check if it is also divisible by 4.*/
var number = parseInt(prompt('enter number:')); 

if (number % 2 == 0 && number % 4 == 0){
    console.log('Number is even and divisible by 4')
}

else if (number % 2 == 0){
    console.log('Number is even')
}
else {
    console.log('Number is odd')
}



/*Write a program that accepts a grade percentage and prints a letter grade (A, B, C, etc.) based on the range the percentage falls into.*/
var grade = parseInt(prompt('enter your grade percentage \(without %:\):')); 

if (grade <= 100 && grade >= 80){
    console.log('grade A')
}

else if (grade < 80 && grade >= 70){
    console.log('grade B')
}
else if (grade < 70 && grade >= 60){
    console.log('grade C')
}
else if (grade < 60 && grade >= 50){
    console.log('grade D')
}
else if (grade < 50 && grade >= 55){
    console.log('grade E')
}
else {
    console.log('That\s a Fail')
}


/*Create a program that checks if a number is between 1 and 100. If it is, check if it is a multiple of 3, 5, or both.*/

var number = 100;

for (var i = 1; i <= number; i++) {
    if (i % 3 == 0 && i % 5 == 0) {
        console.log(`${i} is a multiple of 3 and 5`);
    }
    else if (i % 3 == 0){
        console.log(`${i} is a multiple of 3`)
    }
    else if (i % 5 == 0){
        console.log(`${i} is a multiple of 5`)
    }
    else {
        console.log(i)
    }
}



/*Write a switch statement to print the name of the day of the week, given a number from 1 to 7.

Modify the program to print "Invalid day" if the number is not between 1 and 7.
*/

var dayNumber = parseInt(prompt('Enter day number:'));

switch(dayNumber){
    case 1: 
        console.log('Monday');
        break;
    case 2: 
        console.log('Tuesday');
        break;
    case 3: 
        console.log('Wednesday'); 
        break;
    case 4: 
        console.log('Thursday'); 
        break;
    case 5: 
        console.log('Friday'); 
        break;
    case 6: 
        console.log('Saturday');
        break;
    case 7: 
        console.log('Sunday'); 
        break;
    default: 
        console.log('Invalid day'); 
        break;
}

